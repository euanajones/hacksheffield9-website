---
import '../styles/team.css';
import { Image } from 'astro:assets';
import MattImage from '../img/team/matt.png';
import ErikImage from '../img/team/erik.png';
import EchoImage from '../img/team/echo.jpg';
import JasonImage from '../img/team/jason.jpg';

const teamMembers = [
    { image: MattImage, name: 'Matt Savin', role: 'Lead Organiser' },
    { image: ErikImage, name: 'Erik Lippert', role: 'CompSoc President' },
    { image: null, name: 'Emma Spruce', role: 'Logistics Lead' },
    { image: JasonImage, name: 'Jason Kambites', role: 'Finance Lead' },
    { image: null, name: 'Benjamin Smith', role: 'Sponsor Liaison' },
    { image: null, name: 'Noor Elreidly', role: 'Publicity' },
    { image: null, name: 'Adam Drummond', role: 'Publicity' },
    { image: null, name: 'Echo Garratt', role: 'ShefESH Liaison' },

];
---

<h2 class="team-heading">Meet the team</h2>
<div id="team-container">
    <div class="team-grid">
        {teamMembers.map(member => (
            <div class="team-member">
                <!--<Image src={member.image} alt={member.name} class="team-member-image" />-->
                <h3 class="team-member-name">{member.name}</h3>
                <p class="team-member-role">{member.role}</p>
            </div>
        ))}
    </div>
</div>
